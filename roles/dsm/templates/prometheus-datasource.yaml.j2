apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    id: 1
    orgId: 1
    typeLogoUrl: public/app/plugins/datasource/prometheus/img/prometheus_logo.svg
    access: proxy
    url: https://{{inventory_hostname}}:9090
    password: ''
    user: ''
    database: ''
    basicAuth: false
    isDefault: true
    jsonData:
      tlsAuthWithCACert: true
    secureJsonData:
      tlsCACert: |
        {{ _cacert['content'] | b64decode | indent(width=8) }}
    readOnly: false
