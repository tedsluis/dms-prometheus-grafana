global:
    resolve_timeout: 5m
    http_config:
      proxy_url: 
    slack_api_url: 'https://hooks.slack.com/services/{{_slack_webhook_secret}}'
route:

  group_by: ['...']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  receiver: no-match

  routes:
    - matchers:
        - repeat_interval="1h"
      repeat_interval: 1h
      routes:
        - matchers:
            - severity="critical"
          receiver: critical-receiver      
        - matchers:
            - severity="warning"
          receiver: warning-receiver
        - matchers:
            - severity="informational"
          receiver: informational-receiver
    - matchers:
        - repeat_interval="1d"
      repeat_interval: 1d
      routes:
        - matchers:
            - severity="critical"
          receiver: critical-receiver      
        - matchers:
            - severity="warning"
          receiver: warning-receiver
        - matchers:
            - severity="informational"
          receiver: informational-receiver
    - matchers:
        - repeat_interval="1w"
      repeat_interval: 1w
      routes:
        - matchers:
            - severity="critical"
          receiver: critical-receiver      
        - matchers:
            - severity="warning"
          receiver: warning-receiver
        - matchers:
            - severity="informational"
          receiver: informational-receiver


receivers:
- name: critical-receiver
  slack_configs:
  - channel: '#alertmanager-critical'
    send_resolved: true
    title: '[{{ '{{' }} .Status | toUpper {{ '}}' }}{{ '{{' }} if eq .Status "firing" {{ '}}' }}:{{ '{{' }} .Alerts.Firing | len {{ '}}' }}{{ '{{' }} end {{ '}}' }}] Monitoring Event Notification'
    text: |-
      {{ '{{' }} range .Alerts {{ '}}' }}
        *Alert:* {{ '{{' }} .Annotations.summary {{ '}}' }} - `{{ '{{' }} .Labels.severity {{ '}}' }}`
        *Description:* {{ '{{' }} .Annotations.description {{ '}}' }}
        *Details:*
        {{ '{{' }} range .Labels.SortedPairs {{ '}}' }} . *{{ '{{' }} .Name {{ '}}' }}:* `{{ '{{' }} .Value {{ '}}' }}`
        {{ '{{' }} end {{ '}}' }}
